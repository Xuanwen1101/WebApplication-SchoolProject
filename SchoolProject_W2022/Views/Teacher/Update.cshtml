@model SchoolProject_W2022.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<div>
    <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back to The Teacher</a>
</div>
<h2>Update Teacher</h2>
<form method="POST" action="/Teacher/Edit/@Model.TeacherId" onsubmit="return validateTeacher();">
    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFName" required="required" />

    </div>
    <div>
        <label for="TeacherLname">Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLName" required="required" />

    </div>
    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" required="required" />
    </div>
    <div>
        <label for="TeacherSalary">Salary:</label>
        <input type="number" step="0.01" id="TeacherSalary" name="TeacherSalary" value="@Model.Salary" required="required" />
    </div>
    <div>
        <input type="submit" value="Update Teacher" />
    </div>
    <div id="ErrorBox" style="display:none;"></div>
</form>

