
@{
    ViewBag.Title = "New";
}

<h2>New Teacher</h2>
<form method="POST" action="/Teacher/Create" onsubmit="return validateTeacher();" name="teacherForm">
    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" required="required" />

    </div>
    <div>
        <label for="TeacherLname">Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" required="required" />

    </div>
    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" required="required" />
    </div>
    <div>
        <label for="TeacherSalary">Salary:</label>
        <input type="number" step="0.01" id="TeacherSalary" name="TeacherSalary" required="required" />
    </div>
    <div>
        <input type="submit" value="Add Teacher" />
    </div>
    <div id="ErrorBox" style="display:none;"></div>
</form>

